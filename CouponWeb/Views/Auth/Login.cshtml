@model LoginRequestDto

<form method="post">
    <div class="container border p-4">
        <div class="text-center">
            <h1>Login</h1>
        </div>
@*         <div class="row text-center">
            <div asp-validation-summary="All" class="text-danger"> </div>
        </div> *@
        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="UserName" class="form-control" placeholder="UserName..." />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password..." type="password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success" value="Submit">Login</button>
            </div>
        </div>
    </div>
</form>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}